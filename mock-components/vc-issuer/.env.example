# Database (SQLite)
DATABASE_URL=file:./dev.db

# Issuer hostname (used for DID:web identity and base URL)
# Examples: localhost:3000, vc-issuer.example.com
ISSUER_HOSTNAME=localhost:3000

# Nuts Node Integration (optional)
# If set, the issuer will use the Nuts node to issue credentials
# NUTS_NODE_INTERNAL_URL=http://localhost:8081
# NUTS_ISSUER_DID is required when using Nuts node for credential issuance
# NUTS_ISSUER_DID=did:web:example.com:iam:org-a

# Credential Configuration
CREDENTIAL_VALIDITY_DAYS=365
ACCESS_TOKEN_EXPIRY_SECONDS=86400
C_NONCE_EXPIRY_SECONDS=86400
